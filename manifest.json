{
    "manifest_version": 2,
    "default_locale": "en",
    "name": "__MSG_name__",
    "short_name": "__MSG_shortName__",
    "author": "__MSG_author__",
    "description": "__MSG_description__",
    "version": "8.2.64",
    "browser_action": {
        "default_icon": "img/icon128.png",
        "default_popup": "index.html",
        "default_title": "Github Gloc"
    },
    "options_ui": {
        "page": "options.html"
    },
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": [
                "*://github.com/*"
            ],
            "js": [
                "src/inject.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "src/background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "storage",
        "activeTab",
        "*://*.github.com/*"
    ],
    "icons": {
        "16": "img/icon16.png",
        "32": "img/icon32.png",
        "64": "img/icon64.png",
        "128": "img/icon128.png"
    }
}