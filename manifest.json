{
	"manifest_version": 2,

	"name": "Github Gloc",
	"short_name": "Gloc",
	"author": "Artem Solovev",
	"description": "Ð¡ounts lines of code on GitHub",
	"version": "7.2.0",

	"browser_action": {
		"default_icon": "img/icon128.png",
		"default_popup": "index.html",
		"default_title": "Github Gloc"
	},

	"options_ui": {
		"page": "options.html"
	},

	"options_page": "options.html",

	"content_scripts": [
		{
			"matches": ["*://github.com/*"],

			"js": ["src/inject.js", "src/optipic.js"]
		}
	],

	"background": {
		"scripts": ["src/background.js"],
		"persistent": false
	},

	"permissions": ["storage", "*://*.github.com/*"],

	"icons": {
		"16": "img/icon16.png",
		"32": "img/icon32.png",
		"128": "img/icon128.png"
	}
}
