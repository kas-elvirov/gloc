{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["es2015.core", "dom", "es6", "ESNext"],
		"module": "ESNext",
		"outDir": "./dist/",
		"noImplicitAny": true,
		"baseUrl": "./",
		"types": ["chrome", "node", "vite/client"],
		"typeRoots": ["./types", "./node_modules/@types"],
		"allowJs": true,
		"strict": true,
		"sourceMap": true,
		"jsx": "react-jsx",
		"skipLibCheck": true,
		"moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
		"paths": {
			"src/*": ["src/*"]
		}
	},
	"exclude": [
		"node_modules",
		"./scripts/**/*",
		"./.eslintrc.js",
		"vite.config.mjs",
		"./tsconfig.json"
	],
	"include": [
		"./src/**/*",
		"src/**/*"
	]
}
